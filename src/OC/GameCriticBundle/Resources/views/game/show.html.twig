{% extends '@OCGameCritic/layout.html.twig' %}

{% block body %}
    <h1>Game</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ game.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ game.description }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ game.score }}</td>
            </tr>
            <tr>
                <th>Releasedate</th>
                <td>{% if game.releaseDate %}{{ game.releaseDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <h2>Critics</h2>

{% if critics|length == 0 %}
    Aucune critique pour l'instant.
{% else %}
    {% for critic in critics %}
        {{ include('@OCGameCritic/critic/critic_details.html.twig', { 'critic': critic }) }}
    {% endfor %}
{% endif %}

{% if nbPages > 2 %}
    <nav aria-label="Pagination des critiques">
        <ul class="pagination">
        {% for p in range(1, nbPages) %}
            <li class="page-item{% if p == page %} active"{% endif %}">
                <a class="page-link" href="{{ path('game_show', {'id': game.id, 'slug': game.slug, 'page': p}) }}">{{ p }}</a>
            </li>
        {% endfor %}
        </ul>
    </nav>
{% endif %}

    <ul>
        <li>
            <a href="{{ path('critic_new') }}">Ecrire une critique</a>
        </li>
        <li>
            <a href="{{ path('oc_game_critic_homepage') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('game_edit', { 'id': game.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
