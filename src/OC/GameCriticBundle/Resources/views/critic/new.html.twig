{% extends '@OCGameCritic/layout.html.twig' %}

{% block body %}
    <h2>Ecrire une critique pour le jeu <em>{{ game.name }}</em></h2>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="Valider" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('game_show', {'id': game.id, 'slug': game.slug}) }}">Retour au jeu</a>
        </li>
    </ul>
{% endblock %}
